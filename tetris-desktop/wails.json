{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "tetris-desktop",
  "outputfilename": "tetris-desktop",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "postBuildHooks": {
    "windows": "powershell -Command \"Copy-Item 'build\\bin\\tetris-desktop.exe' '..\\tetris-desktop.exe' -Force\""
  },
  "debug": {
    "openDevtools": true
  },
